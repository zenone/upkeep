<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.mac-maintenance.daemon</string>

    <key>ProgramArguments</key>
    <array>
        <string>/usr/bin/python3</string>
        <string>/usr/local/lib/mac-maintenance/maintenance_daemon.py</string>
    </array>

    <key>RunAtLoad</key>
    <true/>

    <key>KeepAlive</key>
    <true/>

    <key>StandardOutPath</key>
    <string>/var/log/mac-maintenance-daemon.log</string>

    <key>StandardErrorPath</key>
    <string>/var/log/mac-maintenance-daemon.err</string>

    <key>WorkingDirectory</key>
    <string>/usr/local/lib/mac-maintenance</string>

    <key>UserName</key>
    <string>root</string>

    <key>GroupName</key>
    <string>wheel</string>

    <key>ThrottleInterval</key>
    <integer>1</integer>
</dict>
</plist>
