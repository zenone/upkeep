{
  "project": {
    "name": "Mac Maintenance",
    "version": "0.3.0",
    "description": "Hybrid Python/Bash system maintenance tool with TUI and Web interfaces",
    "repository": "local",
    "license": "MIT"
  },
  "tech_stack": {
    "backend": {
      "primary_language": "Python 3.11+",
      "framework": "FastAPI",
      "async_runtime": "uvicorn",
      "daemon": "Custom Python daemon with root privileges"
    },
    "frontend": {
      "web": "Vanilla JavaScript (ES6+), HTML5, CSS3",
      "tui": "Textual (Python)"
    },
    "shell_scripts": {
      "language": "Bash 4.0+",
      "operations": "maintain.sh (legacy core operations)"
    },
    "dependencies": {
      "runtime": [
        "fastapi",
        "uvicorn",
        "textual",
        "psutil",
        "httpx"
      ],
      "dev": [
        "pytest",
        "pytest-asyncio",
        "pytest-cov"
      ],
      "system": [
        "homebrew",
        "jq",
        "curl"
      ]
    }
  },
  "architecture": {
    "pattern": "Hybrid Multi-Interface",
    "components": {
      "daemon": "Privileged background service for root operations",
      "web_server": "FastAPI REST API + static file serving",
      "tui": "Terminal UI for interactive use",
      "cli": "Direct command-line operations via maintain.sh",
      "bridge": "Python-to-Bash bridge for legacy operations"
    },
    "communication": {
      "web_to_daemon": "HTTP REST API + Server-Sent Events (SSE)",
      "python_to_bash": "subprocess.run with stdio capture",
      "privilege_model": "Daemon runs as root, web server as user"
    }
  },
  "compliance": {
    "security": {
      "principle": "Least Privilege + Defense in Depth",
      "requirements": [
        "No user credentials stored",
        "Root operations isolated to daemon",
        "Input validation on all endpoints",
        "OWASP Top 10 compliance",
        "No command injection vulnerabilities"
      ]
    },
    "accessibility": {
      "standard": "WCAG 2.1 Level AA",
      "requirements": [
        "Keyboard navigation support",
        "ARIA labels for dynamic content",
        "Color contrast ratio >= 4.5:1",
        "Screen reader compatibility"
      ]
    },
    "testing": {
      "strategy": "Test-Driven Development (TDD)",
      "coverage_target": "80%+",
      "test_types": ["unit", "integration", "e2e"]
    }
  },
  "ux_vision": {
    "design_philosophy": "2026 Modern Web Standards",
    "inspirations": [
      "GitHub Actions (inline terminal output)",
      "Vercel Dashboard (real-time updates)",
      "Railway (deployment UX)",
      "Docker Desktop (system metrics)"
    ],
    "key_principles": [
      "Real-time feedback via SSE",
      "Inline terminal output (no popups/modals for logs)",
      "Collapsible sections for progressive disclosure",
      "Status icons for quick scanning",
      "Relative timestamps (2 hours ago)",
      "One-click actions with confirmation"
    ],
    "color_palette": {
      "primary": "#007AFF",
      "success": "#34C759",
      "warning": "#FF9500",
      "error": "#FF3B30",
      "neutral": "#8E8E93"
    }
  },
  "deployment": {
    "environment": "macOS (Darwin)",
    "installation": "Local development mode",
    "daemon_location": "/var/local/mac-maintenance-jobs/",
    "web_port": 8080,
    "target_users": "macOS power users and system administrators"
  }
}
