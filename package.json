{
  "name": "upkeep",
  "version": "1.0.0",
  "description": "Mac Maintenance Tool - Web Frontend",
  "private": true,
  "scripts": {
    "build:web": "./scripts/build-web.sh",
    "watch:web": "./scripts/watch-web.sh",
    "type-check": "tsc --noEmit",
    "dev": "npm run watch:web",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest --coverage"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "esbuild": "^0.20.0",
    "jsdom": "^26.0.0",
    "typescript": "^5.3.3",
    "vitest": "^2.1.9"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
